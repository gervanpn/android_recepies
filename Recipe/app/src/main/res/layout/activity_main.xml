<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slate_bkgrd"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:id = "@+id/recipes_img"
            android:layout_width = "350dp"
            android:layout_height = "350dp"
            android:layout_marginHorizontal = "@dimen/pad_standard"
            android:layout_marginBottom="@dimen/pad_standard"
            android:contentDescription = "@string/recipe_image"
            android:src = "@drawable/recipes_image" />

        <ImageView
            android:id = "@+id/logo_img"
            android:layout_width = "298dp"
            android:layout_height = "93dp"
            android:scaleType = "fitCenter"
            android:foregroundGravity="center_horizontal"
            app:srcCompat = "@drawable/text_recipes_wht" />

        <View
            android:id = "@+id/divider"
            android:layout_width = "300dp"
            android:layout_marginBottom="@dimen/pad_half"
            android:layout_height = "3dp"
            android:backgroundTint="@color/white"
            android:background = "?android:attr/listDivider" />

        <TextView
            android:id = "@+id/tagline_text"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily = "@font/antic"
            android:text = "@string/tag_line"
            android:textColor = "@color/white"
            android:textSize = "20sp"
            android:textStyle = "bold"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/imageView2" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>